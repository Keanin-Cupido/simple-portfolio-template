---
import Layout from '../layouts/Layout.astro';
import { Button } from "@/components/ui/button";
---

<Layout title="Frontend Web Developer Portfolio">
  <div class="flex flex-col items-center justify-center min-h-[calc(100vh-4rem)]">
    <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold text-center mb-6">
      Hi, I'm <span class="text-primary">Your Name</span>
    </h1>
    <p class="text-xl sm:text-2xl text-center mb-8 max-w-2xl">
      A passionate frontend developer crafting beautiful and functional web experiences.
    </p>
    <div class="flex space-x-4">
      <Button as="a" href="/portfolio">View My Work</Button>
      <Button as="a" href="/contact" variant="outline">Get in Touch</Button>
    </div>
  </div>
</Layout>